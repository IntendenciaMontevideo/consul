#!/usr/bin/env bash

if
  [[ -s "/home/rodrigo/consul/vendor/bundle/ruby/2.3.0/environment" ]]
then
  source "/home/rodrigo/consul/vendor/bundle/ruby/2.3.0/environment"
  exec erb "$@"
else
  echo "ERROR: Missing RVM environment file: '/home/rodrigo/consul/vendor/bundle/ruby/2.3.0/environment'" >&2
  exit 1
fi
