<div class="row account margin-top-20">
  <div class="small-12 column">
   <div class="large-8 float-left margin-bot-small">

    <span class="avatar-title" style="background: <%=  set_class %>" > <%=  @account.name[0].try(:upcase) %></span>

    <h1 class="inline-block"><%= t("account.show.title") %></h1>

    <%= form_for @account, as: :account, url: account_path do |f| %>
      <%= render "shared/errors", resource: @account %>


    <div class="medium-5 large-6 float-left margin-left-10">
      <div class="margin-top-20">
        <h4><%= t("login_view.sign_in_user_one") %> :</h4>
        <p class="p-small float-left"><%= t("login_view.user_one_description") %></p>
        <p class="p-small float-left"><%= t("login_view.user_one_acces") %></p>
      </div>
      <div class="medium-6 float-left">
        <div class="margin-top-20">
          <p class="base-color"><%= t("login_view.title_debates") %>:</p>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_debates_one") %></p></div>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_debates_two") %></p></div>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_debates_three") %></p></div>
        </div>
        <div class="margin-top-20">
          <p class="base-color"><%= t("login_view.title_consultas") %>:</p>
          <div class="column"><span class="icon-x float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_consultas_one") %></p></div>
          <div class="column"><span class="icon-x float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_consultas_two") %></p></div>
        </div>
      </div>
        <div class="medium-6 float-right">
        <div class="margin-top-20">
          <p class="base-color"><%= t("login_view.title_ideas") %> :</p>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_ideas_one") %></p></div>
          <div class="column"><span class="icon-x float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_ideas_two") %></p></div>
          <div class="column"><span class="icon-x float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_ideas_three") %></p></div>
          <div class="column"><span class="icon-x float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_ideas_four") %></p></div>
        </div>
      </div>
    </div>

    <div class="medium-5 large-6 float-right margin-left-10 margin-top-20">
      <div>
        <h4><%= t("login_view.sign_in_user_two") %> :</h4>
        <p class="p-small float-left"><%= t("login_view.user_two_description") %></p>
        <p class="p-small float-left"><%= t("login_view.user_one_acces") %></p>
      </div>
      <div class="medium-6 float-left">
        <div class="margin-top-20">
          <p class="base-color"><%= t("login_view.title_debates") %>:</p>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_debates_one") %></p></div>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_debates_two") %></p></div>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_debates_three") %></p></div>
        </div>
        <div class="margin-top-20">
          <p class="base-color"><%= t("login_view.title_consultas") %>:</p>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_consultas_one") %></p></div>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_consultas_two") %></p></div>
        </div>
      </div>
        <div class="medium-6 float-right">
        <div class="margin-top-20">
          <p class="base-color"><%= t("login_view.title_ideas") %> :</p>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_ideas_one") %></p></div>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_ideas_two") %></p></div>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_ideas_three") %></p></div>
          <div class="column"><span class="icon-check float-left negativ-margin"></span><p class="p-small float-left"><%= t("login_view.content_ideas_four") %></p></div>
        </div>
      </div>
    </div>
   </div>
      <div class="row">
          <h2 class="margin-top-20 margin-left-small"><%= t("account.show.personal")%></h2>
        <div class="small-12 medium-12 large-4 margin-top-20 column float-right">
          <div class="margin-left-small">
            <%= f.label :public_activity do %>
              <%= f.check_box :public_activity, title: t('account.show.public_activity_label'), label: false %>
              <span class="checkbox">
                <%= t("account.show.public_activity_label") %>
              </span>
            <% end %>
          </div>

          <div class="margin-left-small">
            <%= f.label :public_interests do %>
              <%= f.check_box :public_interests, title: t('account.show.public_interests_label'), label: false %>
              <span class="checkbox">
                <%= t("account.show.public_interests_label") %>
              </span>
            <% end %>
          </div>
<%= f.submit t("account.show.save_changes_submit"), class: "button float-right" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
