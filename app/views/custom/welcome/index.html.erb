<% content_for :body_class, "home-page" %>

<% content_for :canonical do %>
  <%= render "shared/canonical", href: root_url %>
<% end %>
  <div class="small-12 column text-center">
    <div class="row margin padding">
      <div class="small-12 medium-6 large-3 column box ">
        <%= image_tag(image_path_for('w-banner1.png'), class: 'float-center banner-img  ', size: '300x100', alt: t("layouts.header.logo")) %>
        <div class="column box-text">
          <p> <%= image_tag(image_path_for('hand-4.png'), class: ' float-left', size: '100x100', alt: t("layouts.header.logo")) %> </p>
          <h2 class="banner-title"><%= t("welcome.debates.title") %></h2>
          <p class="banner-font"><%= t("welcome.debates.description") %></p>
        </div>
      </div>
      <div class="small-12 medium-6 large-3 column box">
        <%= image_tag(image_path_for('w-banner2.png'), class: 'float-center banner-img  ', size: '300x100', alt: t("layouts.header.logo")) %>
        <div class="column box-text">
          <p> <%= image_tag(image_path_for('hand-3.png'), class: ' float-left', size: '100x100', alt: t("layouts.header.logo")) %> </p>
          <h2 class="banner-title"><%= t("welcome.proposal.title") %></h2>
          <p class="banner-font"><%= t("welcome.proposal.description") %></p>
        </div>
      </div>
      <div class="small-12 medium-6 large-3 column box">
        <%= image_tag(image_path_for('w-banner3.png'), class: 'float-center banner-img ', size: '300x100', alt: t("layouts.header.logo")) %>
        <div class="column box-text">
          <p> <%= image_tag(image_path_for('hand-2.png'), class: ' float-left', size: '100x100', alt: t("layouts.header.logo")) %> </p>
          <h2 class="banner-title"><%= t("welcome.decide.title") %></h2>
          <p class="banner-font"><%= t("welcome.decide.description") %></p>
        </div>
      </div>
      <div class="small-12 medium-6 large-3 column box">
          <%= image_tag(image_path_for('w-banner4.png'), class: 'float-center banner-img ', size: '300x100', alt: t("layouts.header.logo")) %>
        <div class="column box-text">
          <p> <%= image_tag(image_path_for('hand-1.png'), class: ' float-left', size: '100x100', alt: t("layouts.header.logo")) %> </p>
          <h2 class="banner-title"><%= t("welcome.do.title") %></h2>
          <p class="banner-font"><%= t("welcome.do.description") %></p>
        </div>
      </div>
    </div>
  </div>

<% if feature?("user.recommendations") && (@recommended_debates.present? || @recommended_proposals.present?) %>
  <%= render "recommended",
              recommended_debates: @recommended_debates,
              recommended_proposals: @recommended_proposals %>
  <hr>
<% end %>

<% cache [locale_and_user_status, @featured_debates, @featured_proposals, 'featured'] do %>
  <main>
    <div class="jumbo margin padding">
      <div class="row medium-11 large-10 small-centered margin padding" >
        <div class="small-12 medium-6 column text-left size-resp">
          <h1 class="h1-wellcome"><%= t("layouts.header.open_city_title") %></h1>
          <p class="black-color p-wellcome text-left">
            <%= t("layouts.header.open_city_slogan_html") %>
          </p>
          <div class="small-12 medium-8 large-7 text-left go-bot hide-for-small-only">
            <%= link_to t("layouts.header.more_info"), more_info_path, class: "button btn-grey expanded large" %>
          </div>
        </div>
        <div class="small-12 medium-6 column text-center">
        <p> <%= image_tag(image_path_for('Picto_convive_gde.png'), class: 'float-center', alt: t("welcome")) %> </p>
        <div class="small-12 medium-8 large-7 text-left go-bot show-for-small-only">
            <%= link_to t("layouts.header.more_info"), more_info_path, class: "button btn-grey expanded large" %>
        </div>
        </div>
      </div>
    </div>
    <div class="jumbo base-bg">
      <div class="row medium-10 large-10 small-centered">
        <div class="small-12 medium-12 large-3 column">
          <p> <%= image_tag(image_path_for('Globo_conversa.png'), class: 'float-center', size: '200x200', alt: t("Globo_conversa")) %> </p>
        </div>
        <div class="small-12 medium-4 large-3 column">
          <p> <%= image_tag(image_path_for('picto_user_gde.png'), class: 'hide-for-small-only float-left', size: '100x100', alt: t("layouts.header.logo")) %> </p>
          <p> <%= image_tag(image_path_for('picto_user_gde.png'), class: 'show-for-small-only float-center', size: '100x100', alt: t("layouts.header.logo")) %> </p>
          <h2>1. Registrate</h2>
          <p>Hacé click en Ingresar,  completá el formulario y  sé parte de Montevideo Decide</p>
        </div>
        <div class="small-12 medium-4 large-3 column">
          <p> <%= image_tag(image_path_for('picto_Sobre.png'), class: 'hide-for-small-only float-left', size: '100x100', alt: t("layouts.header.logo")) %> </p>
          <p> <%= image_tag(image_path_for('picto_Sobre.png'), class: 'show-for-small-only float-center', size: '100x100', alt: t("layouts.header.logo")) %> </p>
          <h2>2. Votá</h2>
          <p>Opiná, proponé y  decidí cómo querés  que sea la ciudad</p>
        </div>
        <div class="small-12 medium-4 large-3 column">
          <p> <%= image_tag(image_path_for('picto_comparte.png'), class: 'hide-for-small-only float-left', size: '100x100', alt: t("layouts.header.logo")) %> </p>
          <p> <%= image_tag(image_path_for('picto_comparte.png'), class: 'show-for-small-only float-center', size: '100x100', alt: t("layouts.header.logo")) %> </p>
          <h2>3. Compartí</h2>
          <p>Compartí en redes  sociales para que  más rosarinos puedan  aportar sus opiniones</p>
        </div>
      </div>
    </div>
  </main>
<% end %>
