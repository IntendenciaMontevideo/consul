<div class="small-12 column image-preview">
  <figure class="custom-figure">
    <%= image_tag image.attachment.url(version),
                  class: image_class(image),
                  alt: image.title,
                  title: image.title %>
    <% if show_caption %>
      <figcaption class="text-left">
        <em><%= image.title %></em>
      </figcaption>
    <% end %>
  </figure>

  <% if show_caption %>
    <hr>
  <% end %>

</div>
