<% content_for :social_media_meta_tags do %>
  <% render "/shared/social_media_meta_tags", social_title: t("participatory_budget.title"), social_description: t("participatory_budget.content_banner")  %>
<% end %>
<div class="row-for-banners">
  <% if ((current_user.blank?) || (!current_user.blank? && session[current_user.id.to_s].blank?)) %>
    <div class="box banner-box">
      <%= image_tag(image_path_for('banner-general.png'), class: 'banner-image float-center margin-bottom banner-img', width: '100%', alt: t("layouts.header.logo")) %>
      <div class="box-text general-box-text">
        <div class="row">
          <h2 class="banner-title general-banner-title-long column small-12 inline-h-0">Presupuesto Participativo</h2>
        </div>
      </div>
    </div>
  <% end %>
  <% if ((current_user.blank?) || (!current_user.blank? && session[current_user.id.to_s].blank?)) %>
    <div class="medium-8 small-11 margin-left-40">
  <% else %>
    <div class="medium-8 small-11 margin-left-40 padding-btn-banner-vote">
  <% end %>
    <p><%= t("participatory_budget.content_body") %></p>
    <p><%= t("participatory_budget.content_body_2") %></p>

    <p>Conocé más del <%= link_to 'Presupuesto Participativo', 'http://presupuestoparticipativo.montevideo.gub.uy/', target: '_blank'%></p>
    <br>
  </div>
</div>
