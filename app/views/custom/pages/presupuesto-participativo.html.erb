<% content_for :social_media_meta_tags do %>
  <% render "/shared/social_media_meta_tags", social_title: t("participatory_budget.title"), social_description: t("participatory_budget.content_banner")  %>
<% end %>
<div class="row-for-banners">
  <div class="box ">
     <%= image_tag(image_path_for('cbzl_PParticipativo.png'), class: 'float-center margin-bottom banner-img', width: '100%', alt: t("layouts.header.logo")) %>
    <div class="column box-text">
      <p> <%= image_tag(image_path_for('hand-4.png'), class: ' float-left show-for-large-only', size: '70x70', alt: t("layouts.header.logo")) %> </p>
      <p> <%= image_tag(image_path_for('hand-4.png'), class: ' float-left show-for-medium-only', size: '55x55', alt: t("layouts.header.logo")) %> </p>
      <p> <%= image_tag(image_path_for('hand-4.png'), class: ' float-left show-for-small-only margin-top-3', size: '20x20', alt: t("layouts.header.logo")) %> </p>
      <h2 class="banner-title"><%= t("participatory_budget.title") %> </h2>
      <p class="banner-font medium-11 show-for-large-only"><%= t("participatory_budget.content_banner") %></p>
    </div>
  </div>
  <div class="medium-8 small-11 column margin-left-40">
    <p><%= t("participatory_budget.content_body") %></p>
    <p><%= t("participatory_budget.content_body_2") %></p>

    <p>Conocé más del <%= link_to 'Presupuesto Participativo', 'http://presupuestoparticipativo.montevideo.gub.uy/', target: '_blank'%></p>
    <br>
  </div>
</div>
