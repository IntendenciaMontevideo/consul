<div id="search_form" class="search-form-header">
  <h1 class="show-for-sr"><%= t("shared.outline.searcher") %></h1>
  <%= form_tag search_path, method: :get do %>
    <div class="input-group search-header">
      <div class="White-bg float-right ">
        <%= image_tag(image_path_for('search2.gif'), class: 'search-image-container float-right search-glass', size: '38x38') %>
      </div>
      <input type="text" name="search" placeholder='<%= t("#{i18n_namespace}.placeholder") %>' class="search-text-input float-left search-nav input-group-field <%= params[:search].blank? ? 'search-nav-background': '' %>" value="<%= params[:search] %>" id="search_text">
    </div>
  <% end %>
</div>
